{
  "name": "popmotion-website",
  "description": "The JavaScript motion engine. Create animations and interactions with tweens, physics and input tracking.",
  "author": "Matt Perry <sirhound@popmotion.io>",
  "homepage": "http://popmotion.io",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Popmotion/popmotion"
  },
  "bugs": {
    "url": "https://github.com/Popmotion/popmotion/issues"
  },
  "keywords": [
    "animation",
    "ux",
    "ui",
    "popmotion",
    "canvas animation",
    "jquery animation",
    "dom animation",
    "dom",
    "pointer tracking",
    "mouse",
    "mouse tracking",
    "touch",
    "touch tracking",
    "physics",
    "interaction",
    "interface",
    "svg"
  ],
  "scripts": {
    "build-content": "node scripts/generate-content.js",
    "build": "npm run build-content && next build && next export -o public",
    "watch": "npm run build-content && next",
    "start": "next start",
    "lint": "eslint",
    "s3-upload": "aws s3 cp public s3://popmotion.io --recursive",
    "invalidate-cloudfront": "aws configure set preview.cloudfront true && aws cloudfront create-invalidation --distribution-id E31YV8NBB5M5N4 --paths /*",
    "publish-site": "npm run build && npm run s3-upload && npm run invalidate-cloudfront"
  },
  "analyze": true,
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "front-matter": "^2.1.1",
    "live-on-stage": "^2.0.17",
    "marksy": "^5.0.0",
    "nprogress": "^0.2.0",
    "popmotion": "^8.4.0",
    "prismjs": "^1.6.0",
    "react": "^16.5.2",
    "react-dom": "^16.4.2",
    "react-intersection": "^1.0.5",
    "react-live": "^1.7.0",
    "react-pose": "^3.3.4",
    "react-pose-text": "^3.1.0",
    "react-scrollspy": "^3.3.5",
    "react-syntax-highlighter": "^5.8.0",
    "styled-components": "^2.2.3",
    "three": "^0.88.0",
    "uglifyjs-webpack-plugin": "^2.0.1"
  },
  "devDependencies": {
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "file-loader": "^1.1.11",
    "next": "^4.2.1",
    "raw-loader": "^0.5.1",
    "s3": "^4.4.0",
    "webpack": "^4.6.0"
  },
  "version": "7.0.0",
  "prettier": {
    "singleQuote": true
  }
}
